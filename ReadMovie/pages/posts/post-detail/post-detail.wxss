.concontainer{
    display: flex;
    flex-direction:column;
}
.detail-img{
    position: relative;
}
.head-img{
    width:100%;
}
.music-img{
    position: absolute;
    top: 50%;
    left:50%;
    margin: -50rpx 0 0 -50rpx;
    width: 100rpx;
    height: 100rpx;
}
.content-author{
    margin: 10px 0;
    overflow: hidden;
}
.avatar{
    float: left;
    margin-left: 20rpx;
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}
.author{
    float: left;
    margin-left: 20rpx;
    font-size: 30rpx;
    font-weight: 300;
    line-height: 64rpx;
    vertical-align: middle;
    color: #666;
}
.content-text{
    float: left;    
    margin-left: 20rpx;
    font-size: 25rpx;
    line-height: 64rpx;
    color: #666;
}
.date{
    margin-left: 20rpx;
    font-size: 25rpx;
    line-height: 64rpx;
    color:#666;
}
.content-title{
    font-size: 36rpx;
    margin:20px 0 20rpx 30rpx;
    letter-spacing: 2rpx;
    color: #4b556c;
    font-weight: bold;
    text-align: center;
}
.tool{
    overflow: hidden;
}
.tool .horizon{
    position: relative;
    top: 45rpx;
    width: 100%;
    height: 1px;
    background: #e5e5e5;
    z-index: -90;
}
.circle-img{
    float: right;
}
.tool image{
    width: 90rpx;
    height: 90rpx;
}
.collection{
    margin:0 20rpx;
}
.content{
    padding: 0 30rpx;
    margin-top: 20px;
    letter-spacing: 2px;
    color: #666;
    line-height: 30rpx;
}